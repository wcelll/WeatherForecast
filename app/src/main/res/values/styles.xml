<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 定义自定义的 Spinner 弹出窗样式 -->
    <style name="CustomSpinnerPopup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <!-- 这里可以添加更多样式项目 -->
    </style>

    <!-- 定义自定义的 Spinner 样式 -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:background">@color/transparent</item>
        <item name="android:dropDownSelector">@color/selector_color</item>
        <item name="android:popupBackground">@color/popup_background_color</item>
        <!-- 在这里可以添加更多样式项 -->
    </style>

    <!-- 可以定义其他样式 -->

</resources>
